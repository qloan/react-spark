{
  "name": "react-spark",
  "version": "1.0.0",
  "description": "React components for Spark",
  "author": "ptrkcsk",
  "license": "UNLICENSED",
  "repository": "ptrkcsk/react-spark",
  "main": "dist/react-spark-bundle.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "test:jest": "jest src/**/** --coverage",
    "build:webpack": "NODE_ENV='dev' NODE_OPTIONS=--openssl-legacy-provider webpack --config webpack.config.js",
    "eslint": "eslint '**/*.js'",
    "eslint-fix": "eslint -fix '**/*.js'",
    "start": "npm run start:webpack",
    "start:webpack": "NODE_ENV='dev' NODE_OPTIONS=--openssl-legacy-provider webpack --watch",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "surge example/build",
    "postinstall": "npm run build:webpack"
  },
  "peerDependencies": {
    "prop-types": "15.8.1",
    "react": "16.7.0",
    "react-dom": "16.7.0"
  },
  "devDependencies": {
    "chokidar": "^2.0.4",
    "jest": "^20.0.4"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@sparkdesignsystem/spark-card": "4.0.3",
    "@sparkdesignsystem/spark-core": "^10.1.1",
    "@sparkdesignsystem/spark-extras": "3.1.8",
    "@sparkdesignsystem/spark-highlight-board": "4.0.4",
    "@sparkdesignsystem/spark-react": "1.0.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "classnames": "^2.2.6",
    "cross-env": "^5.1.4",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "sass": "1.59.3",
    "prop-types": "^15.6.2",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-scripts": "2.1.1",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.10.0"
  }
}
